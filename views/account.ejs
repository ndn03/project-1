<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/account.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" />
</head>
<body>
    <div class="sidebar">
        <div class="logo">
            <h2>Admin</h2>
        </div>
        <ul class="menu">
            <li class="menu-item">
                <a href="#" onclick="showSection('product-info')">
                    <i class="fas fa-home"></i> Tổng quan
                </a>
            </li>
            <li class="menu-item">
                <a href="#" onclick="showSection('add-product')">
                    <i class="fas fa-edit"></i> Quản lý sản phẩm
                </a>
            </li>
            <li class="menu-item">
                <a href="#" onclick="showSection('donhang')">
                    <i class="fab fa-first-order"></i> Quản lý đơn hàng
                </a>
            </li>
            <li class="menu-item">
                <a href="#" onclick="showSection('user')">
                    <i class="fas fa-user-circle"></i> Tài khoản
                </a>
            </li>
            <li class="menu-item">
                <a href="#" onclick="showSection('voucher-management')">
                    <i class="fas fa-ticket-alt"></i> Quản lý voucher
                </a>
            </li>
            <li class="menu-item">
                <a href="#" onclick="showSection('comment')">
                    <i class="fas fa-comment"></i> Quản lý đánh giá
                </a>
            </li>
            <li class="menu-item">
                <a href="#" onclick="showSection('list-info')">
                    <i class="fas fa-list"></i> Khác
                </a>
            </li>
        </ul>
    </div>
    
    <div class="main-content">
        <header>
            <h1>TỔNG QUAN</h1>
            <a href="/" class="btn-back-home">Quay lại trang chủ</a>
        </header>

        <!-- Section Quản lý đơn hàng -->
        <section id="donhang" class="content-section" style="display: none;">
            <div class="order">
                <h2>Quản Lý Đơn Hàng</h2>
                <div class="order-table-container">
                    <table class="order-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Khách Hàng</th>
                                <th>Địa Chỉ</th>
                                <th>Phương Thức TT</th>
                                <th>Trạng Thái</th>
                                <th>Tổng Tiền</th>
                                <th>Ngày Tạo</th>
                                <th>Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody id="ordersList">
                            <!-- Danh sách đơn hàng sẽ được thêm bằng JavaScript -->
                        </tbody>
                    </table>
                </div>
                <div class="pagination">
                    <button id="prev-page" class="btn-secondary">
                        <i class="fas fa-chevron-left"></i> Trước
                    </button>
                    <span id="page-info">Trang 1</span>
                    <button id="next-page" class="btn-secondary">
                        Sau <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            </div>
        </section>

        <!-- Modal chi tiết đơn hàng -->
        <div id="order-detail-modal" class="form-container" style="display: none;">
            <div class="form-content" style="max-width: 700px;">
                <div class="form-header">
                    <h3>Chi tiết đơn hàng</h3>
                    <button type="button" class="close-form" onclick="hideOrderDetail()">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div id="order-detail-content">
                    <!-- Nội dung chi tiết sẽ được render bằng JS -->
                </div>
            </div>
        </div>

        <!-- Other sections (product, user, voucher, etc.) remain unchanged -->
        <!-- Include them here if needed -->

    </div>

    <script src="/js/admin.js"></script>
</body>
</html>
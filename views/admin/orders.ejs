<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <div class="sidebar">
        <div class="logo">
            <h2>Admin</h2>
        </div>
        <ul class="menu">
            <li class="menu-item">
                <a href="/admin">
                    <i class="fas fa-home"></i> Tổng quan
                </a>
            </li>
            <li class="menu-item">
                <a href="/admin/products">
                    <i class="fas fa-edit"></i> Quản lý sản phẩm
                </a>
            </li>
            <li class="menu-item">
                <a href="/admin/orders" class="active">
                    <i class="fab fa-first-order"></i> Quản lý đơn hàng
                </a>
            </li>
            <li class="menu-item">
                <a href="/admin/users">
                    <i class="fas fa-user-circle"></i> Quản lý người dùng
                </a>
            </li>
            <li class="menu-item">
                <a href="/admin/categories">
                    <i class="fas fa-tags"></i> Quản lý danh mục
                </a>
            </li>
        </ul>
    </div>
    
    <div class="main-content">
        <header>
            <h1>Quản lý đơn hàng</h1>
        </header>
        
        <section class="orders">
            <div class="order-filters">
                <input type="text" id="search-order" placeholder="Tìm kiếm đơn hàng...">
                <select id="status-filter">
                    <option value="">Tất cả trạng thái</option>
                    <option value="pending">Chờ xác nhận</option>
                    <option value="processing">Đang xử lý</option>
                    <option value="shipped">Đang giao hàng</option>
                    <option value="delivered">Đã giao hàng</option>
                    <option value="cancelled">Đã hủy</option>
                </select>
                <input type="date" id="date-filter">
            </div>

            <div id="order-list">
                <table>
                    <thead>
                        <tr>
                            <th>Mã đơn hàng</th>
                            <th>Khách hàng</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Dữ liệu đơn hàng sẽ được thêm vào đây bằng JavaScript -->
                    </tbody>
                </table>
            </div>
        </section>

        <section id="orders" class="content-section">
            <h2>Quản Lý Đơn Hàng</h2>
            <div class="order-table-container">
                <table class="order-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Khách Hàng</th>
                            <th>Tổng Tiền</th>
                            <th>Trạng Thái</th>
                            <th>Ngày Tạo</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody id="order-list">
                        <!-- Danh sách đơn hàng sẽ được thêm bằng JavaScript -->
                    </tbody>
                </table>
            </div>
        </section>
    </div>

    <script src="/js/admin/orders.js"></script>
</body>
</html>